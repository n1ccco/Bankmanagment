@model BankPredictionViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h2 class="mb-0">Bank Prediction Result</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Result:</h4>
                    <p class="card-text">Has the client subscribed a term deposit? @(Model.PredictionResult.PredictedLabel ? "Yes" : "No")</p>
                </div>
            </div>
        </div>
    </div>
</div>